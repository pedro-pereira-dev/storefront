---
import '../styles.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { DEFAULT_LOCALE, getLocalizedContent, nonDefaultLocales, resolveLocale, SUPPORTED_LOCALES } from '../i18n';

export function getStaticPaths() {
  return nonDefaultLocales().map((locale) => ({
    params: { lang: locale },
  }));
}

const requestedLocale = Astro.params.lang;
const locale = resolveLocale(requestedLocale);
if (requestedLocale && requestedLocale !== locale) {
  return Astro.redirect(locale === DEFAULT_LOCALE ? '/' : `/${locale}`);
}

const { strings } = getLocalizedContent(locale);
const canonical = locale === DEFAULT_LOCALE ? '/' : `/${locale}`;
---

<html lang={locale} class="bg-black text-white h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={strings.meta.description} />
    <link rel="canonical" href={canonical} />
    <title>{strings.meta.title}</title>
  </head>
  <body class="min-h-screen bg-black text-white flex flex-col">
    <Navbar leftLabel={strings.navbar.leftLabel} centerLabel={strings.navbar.centerLabel} rightLabel={strings.navbar.rightLabel} />
    <main class="flex-1 flex flex-col gap-4 items-center justify-center px-6 text-center">
      <h1 class="text-3xl tracking-[0.4em] uppercase">{strings.hero.heading}</h1>
      <p class="text-white/70 tracking-[0.3em] text-xs uppercase">{strings.hero.tagline}</p>
    </main>
    <Footer
      currentLocale={locale}
      languagesLabel={strings.footer.languagesLabel}
      locales={strings.footer.locales}
      defaultLocale={DEFAULT_LOCALE}
    />
  </body>
</html>

<Fragment slot="head">
  {SUPPORTED_LOCALES.map((code) => (
    <link rel="alternate" hreflang={code} href={code === DEFAULT_LOCALE ? '/' : `/${code}`} />
  ))}
</Fragment>
