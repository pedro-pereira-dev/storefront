---
const { currentLocale, locales, languagesLabel, defaultLocale } = Astro.props;
---

<footer class="sticky bottom-4 z-40 px-4 sm:px-6">
  <div class="mx-auto flex max-w-4xl items-center justify-between gap-3 rounded-[1rem] border border-white/15 bg-white/5 px-4 py-3 text-[10px] uppercase tracking-[0.2em] text-white/80 backdrop-blur-xl backdrop-saturate-150 sm:px-8 sm:py-3 sm:text-xs">
    <span class="tracking-[0.3em] text-white/60">{languagesLabel}</span>
    <nav class="flex flex-wrap items-center gap-4 text-white/60">
      {locales.map((entry) => {
        const href = entry.code === defaultLocale ? '/' : `/${entry.code}`;
        const isActive = entry.code === currentLocale;
        return (
          <a href={href} class={`transition-colors ${isActive ? 'text-white' : 'hover:text-white/90'}`}>
            {entry.label}
          </a>
        );
      })}
    </nav>
  </div>
</footer>
